@model IEnumerable<CRUDAutosv.Models.Auto>

@{
    ViewData["Title"] = "Index";
}
<div class="text-center">
    <h1 class="display-3">Autos Por Chile</h1>
    <p>
        <a asp-action="Create" class="link-offset-2 link-underline link-underline-opacity-0">Almacena un nuevo auto</a>
    </p>
</div>


<div>
    <div>
    <form action="/Autoes" method="get">
            <div >
                <div class="input-group mb-3">
                    <input class="form-control" type="search" placeholder="Chevrolet | Versa | 2020" name="Search" class="input w-full border mt-2" />
                    <button type="submit" class="btn btn-outline-secondary" id="button-addon2">Filtrar</button>
                </div>

                
        </div>
    </form>
</div>
</div>
<div class="text-center">
<table class="table table-striped table-hover table-responsive">
    <thead >
        <tr >
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patente)
            </th>
            <th>
                Año
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Anio)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdAuto">Editar</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdAuto">Detalles</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdAuto">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
    
</table>
</div>
<a asp-action="Index" class="btn btn-primary">Volver</a>
